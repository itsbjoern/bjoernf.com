---
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";
import Navigation from "@/components/Navigation/Navigation.astro";
import Me from "@/images/me.jpg";
interface Props {
  title: string;
  description?: string;
  image?: string;
  subtitle?: string;
}

const { title, description = "", image = Me.src } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="title" content={`${title} | Björn Friedrichs`} />
    <meta name="description" content={description} />
    <meta name="image" content={Astro.url.origin + image} />

    <meta name="og:title" content={`${title} | Björn Friedrichs`} />
    <meta name="og:description" content={description} />
    <meta name="og:image" content={Astro.url.origin + image} />
    <meta name="og:type" content="website" />
    <meta name="og:url" content={Astro.url} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={Astro.url} />
    <meta name="twitter:title" content={`${title} | Björn Friedrichs`} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:creator" content="bjoernf_dev" />
    <meta name="twitter:image" content={Astro.url.origin + image} />

    <script
      defer
      src="https://a.bjoernf.com/script.js"
      data-domains="bjoernf.com"
      data-website-id="fe2bd402-60bd-448b-ac87-0a143b32bb61"></script>

    <link
      rel="alternate"
      type="application/rss+xml"
      title="Björn Friedrichs' Blog"
      href="/rss.xml"
    />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Björn Friedrichs</title>
  </head>
  <body>
    <div class="flex flex-1 bg-default">
      <div class="flex flex-1 flex-col">
        <div
          class="smo:pr0 ml-auto mr-auto box-border flex w-full flex-1 flex-col md:max-w-[700px] smo:pl-0"
        >
          <div class="flex flex-1 flex-col">
            <Header />
            <div
              class="flex flex-1 flex-col px-1 py-11"
              style={{ maxWidth: "100vw" }}
            >
              <slot />
            </div>
            <Footer />
            <Navigation mobile />
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
<style is:global>
  :root {
    --tw-color-primary: theme("colors.primary");
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-family: system-ui, sans-serif;
    background: #13151a;
    background-size: 224px;

    font-family: "Raleway", "-apple-system", "BlinkMacSystemFont",
      "Helvetica Neue", "Arial", "sans-serif";
  }

  html,
  body {
    min-height: 100vh;
  }

  body {
    display: flex;
    overscroll-behavior-y: none;
  }

  code {
    font-family: source-code-pro, Menlo, Monaco, Consolas, "Courier New",
      monospace;
  }

  .neo {
    box-shadow:
      5px 5px 10px #e3e3e3,
      -5px -5px 10px #ffffff;
  }
</style>
