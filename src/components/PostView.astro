---
import { Image } from "astro:assets";
import Tag from "./Tag.astro";
import { formatDate } from "@/utils/formatDate";
import type { PostInner } from "@/utils/models";
import "@/content.css";

interface Props {
  post: PostInner;
}

const { post } = Astro.props;
const { image, title, html, tags, summary, publishedAt } = post;
---

<div class="flex flex-col gap-5 post-content">
  <div class="flex flex-row items-center gap-5 smo:flex-col">
    {
      image ? (
        <div class="image-container">
          <Image width={100} height={100} src={image} alt="" />
        </div>
      ) : null
    }
    <div class="flex flex-1 flex-col justify-center gap-2">
      <div class="flex flex-row flex-wrap justify-between gap-2">
        {
          tags && tags.length ? (
            <div class="flex flex-row gap-2">
              {tags.map((t) => (
                <Tag name={t} />
              ))}
            </div>
          ) : null
        }
        <span style={{ fontSize: "0.75rem" }}>
          Published {formatDate(publishedAt ?? new Date())}
        </span>
      </div>
      <h2 class="text-xl font-bold">{title}</h2>
    </div>
  </div>
  <div>
    <div set:html={html} />
  </div>
</div>

<style>
  .image-container {
    width: 120px;
    min-width: 120px;
    height: 120px;

    position: relative;
    display: flex;

    border-width: 1px;
    border-style: solid;
    border-color: rgba(0, 0, 0, 0.23);
    border-radius: 4px;
    padding: 3px;

    align-items: center;
    justify-content: center;
  }
  .image-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>
