---
interface Props {
  id: string;
}

const { id } = Astro.props;
---

<button
  class={`tab-button tab-button-${id} px-4 py-2 text-sm font-medium text-gray-600 rounded-t-lg transition-colors duration-200 hover:bg-gray-100 whitespace-nowrap`}
  data-tab-id={id}
  role="tab"
  aria-selected="false"
  tabindex="-1"
>
  <slot />
</button>
