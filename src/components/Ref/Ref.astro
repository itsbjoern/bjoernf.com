---
import TransitEnterexitIcon from "@/images/icons/TransitEnterexit.svg?raw";
import LinkRender from "./LinkRender.astro";
import Icon from "../Icon.astro";

interface Props {
  text?: string;
  href: string;
  rel?: string;
}

const { text, href, rel } = Astro.props;
const isExternal = href.slice(0, 1) !== "/";
---

<LinkRender external={isExternal} href={href} rel={rel}>
  {` ${text || href}`}
  {
    isExternal ? (
      <Icon icon={TransitEnterexitIcon} class="inline rotate-180" />
    ) : null
  }
</LinkRender>
