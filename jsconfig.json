{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2020",
    "jsx": "react",
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "paths": {
      "app/*": ["./app/src"]
    }
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    ".parcel-cache",
    "dist"
  ]
}